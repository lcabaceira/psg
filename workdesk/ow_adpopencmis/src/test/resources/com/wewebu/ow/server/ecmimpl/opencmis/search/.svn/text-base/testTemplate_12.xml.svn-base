<?xml version="1.0" encoding="UTF-8" ?>
<storedsearch>
	<searchspec versionselection="currentversion">
		<searchclauses>
		     <objectstores mergeoption="union">
                <objectstore id="R1" name="R1NAME"/> 
             </objectstores>
		     <folders>
                <folder pathname="/r2Path" searchsubfolders="true" view="hidden">
                    <objectstore id="R2" name="R2NAME"/>
                </folder>
            </folders>
            
			<select>
				<selectprops>
					<selectprop symname="cmis:document.cmis:name" sortlevel="1" sortorder="ascending" />
					<selectprop symname="cmis:document.cmis:lastModifiedBy" sortlevel="2" sortorder="descending"/>
				</selectprops>
			</select>
			<from>
				<class symname="cmis:document" />
			</from>
			<where>
				<eq>
					<whereprop editproperty="editable" symname="cmis:document.cmis:name"/>
   			       	<literal>S[myname]</literal>
				</eq>
			</where>
		</searchclauses>
		<options maxrecords="100" />
	</searchspec>
</storedsearch>