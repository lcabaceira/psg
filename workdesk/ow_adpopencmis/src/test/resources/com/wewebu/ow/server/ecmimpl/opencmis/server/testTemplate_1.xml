<?xml version="1.0" encoding="UTF-8" ?>
<storedsearch>
	<searchspec versionselection="currentversion">
		<searchclauses>
		     <objectstores mergeoption="union">
                <objectstore id="R1ID" name="R1"/> 
                <objectstore id="R3ID" name="R3"/>
                <objectstore name="R4" /> 
             </objectstores>
		     <folders>
                <folder pathname="/pathInR2" searchsubfolders="true" view="hidden">
                    <objectstore id="R2ID" name="R2"/>
                </folder>
                <folder pathname="/pathInR4" searchsubfolders="false" view="readonly">
                    <objectstore id="R4ID" name="R4"/>
                </folder>
            </folders>
            
            
			<select>
				<selectprops>
					<selectprop symname="name" sortlevel="1" sortorder="ascending" />
					<selectprop symname="lastModifiedBy" sortlevel="2" sortorder="descending"/>
				</selectprops>
			</select>
			<from>
				<class symname="document" />
			</from>
			<where>
				<eq>
					<whereprop editproperty="editable" symname="name"/>
   			       	<literal>S[myname]</literal>
				</eq>
			</where>
		</searchclauses>
		<options maxrecords="100" />
	</searchspec>
</storedsearch>