<?xml version="1.0" encoding="UTF-8"?>

<Context path="/workdesk" privileged="true" reloadable="true">

    <!-- Workdesk Contract Management Solution Template -->
	<Resource name="java:/PostgreSQLDS"
        auth="Container"
        type="javax.sql.DataSource"
        factory="org.apache.tomcat.dbcp.dbcp.BasicDataSourceFactory"
        username="owdemo"
        password="owdemo"
        driverClassName="org.postgresql.Driver"
        url="jdbc:postgresql://localhost:5432/owd?autoReconnect=true"
        maxWait="1000"
        removeAbandoned="true"
        maxActive="30"
        maxIdle="10"
        removeAbandonedTimeout="60"
        logAbandoned="true"
        validationQuery="select 1"/>

</Context>