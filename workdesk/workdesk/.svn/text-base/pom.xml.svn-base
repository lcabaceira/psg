		<profile>
			<!-- profile used by Jenkins -->
			<id>Validate</id>
			<build>
				<plugins>
					<plugin>
						<!-- checkout xsd for owplugins.xml validation -->
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-scm-plugin</artifactId>
						<executions>
							<execution>
								<id>Update-XML-schema</id>
								<phase>generate-resources</phase>
								<configuration>
									<connectionUrl>scm:svn:https://svn.alfresco.com/repos/abs-owd_repos/mrcp_configurator/trunk/plugins/com.wewebu.ow.eclipseconf.xmleditplug/src/main/resources/xsd/plugin</connectionUrl>
									<exportDirectory>src/main/resources/xsd/plugin</exportDirectory>
								</configuration>
								<goals>
									<goal>export</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.7</version>
						<executions>
							<execution>
								<id>XML-validation</id>
								<phase>prepare-package</phase>
								<configuration>
									<target>
										<!-- needs to be run with at least Java 1.5 -->
										<echo message="xml validation" />
										<taskdef resource="com/wewebu/ow/validator/ant/antlib.xml" classpath="src/main/resources/xsd/ow_configxsdmodel.jar" />
										<owpluginsvalidator xsdfolder="src/main/resources/xsd/plugin" failonerror="true">
											<owplugins dir="src/main/webapp/WEB-INF/conf">
												<include name="**/owplugins.xml" />
											</owplugins>
										</owpluginsvalidator>
										<!-- Delete xsd files -->
										<echo message="xml validation finish" />
										<delete dir="src/main/resources/xsd/plugin" includeemptydirs="true" />
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
				<finalName>workdesk</finalName>
			</build>
		</profile>
		<profile>
			<id>updateApplets</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<version>2.4</version>
						<executions>
							<execution>
								<id>copy-dependencies</id>
								<phase>prepare-package</phase>
								<goals>
									<goal>copy</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>com.wewebu.ecm</groupId>
											<artifactId>ow_clientservices</artifactId>
											<version>${project.version}</version>
											<outputDirectory>${basedir}/src/main/webapp/applets/clientservices</outputDirectory>
										</artifactItem>
 										<artifactItem>
											<groupId>com.wewebu.ecm</groupId>
											<artifactId>ow_dndupload</artifactId>
											<version>${project.version}</version>
											<outputDirectory>${basedir}/src/main/webapp/applets/dndupload</outputDirectory>
										</artifactItem>
										<artifactItem>
											<groupId>com.wewebu.ecm</groupId>
											<artifactId>ow_zidilauncher</artifactId>
											<version>${project.version}</version>
											<outputDirectory>${basedir}/src/main/webapp/applets/zidilauncher</outputDirectory>
										</artifactItem>
									</artifactItems>
									<stripVersion>true</stripVersion>
									<overWriteReleases>true</overWriteReleases>
									<overWriteSnapshots>true</overWriteSnapshots>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<!-- This is used to copy applet dependencies to workdesk -->
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.7</version>
						<executions>
							<execution>
								<phase>prepare-package</phase>
								<configuration>
									<echo message="Copy applets dependencies" />
									<target>
										<copy todir="${basedir}/src/main/webapp/applets/dndupload" overwrite="true" failonerror="false">
											<fileset dir="../ow_dndupload/target/appletDependency" includes="**/*" />
										</copy>
										<copy todir="${basedir}/src/main/webapp/applets/clientservices" overwrite="true" failonerror="false">
											<fileset dir="../ow_clientservices/target/appletDependency" includes="**/*" />
										</copy>

										<echo message="Adding Trusted-Library:true" />
										<echo level="warning" message="Make sure your manifest patch has a new line character after the last line." />
										<apply executable="jar">
											<arg value="vumf" />
											<arg line="${basedir}/src/META-INF/MANIFEST.MF.patch" />
											<srcfile />
											<fileset dir="${basedir}/src/main/webapp/applets" includes="**/*.jar" />
										</apply>
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>

					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jarsigner-plugin</artifactId>
						<version>1.1</version>
						<executions>
							<execution>
								<phase>prepare-package</phase>
								<id>sign</id>
								<goals>
									<goal>sign</goal>
								</goals>
							</execution>
							<execution>
								<phase>prepare-package</phase>
								<id>verify</id>
								<goals>
									<goal>verify</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<archiveDirectory>src/main/webapp</archiveDirectory>
							<excludes>
								<exclude>**/ow_vieweribm-*.jar</exclude>
								<exclude>*/WEB-INF/lib/*</exclude>
								<exclude>*javadoc.jar</exclude>
								<exclude>*-sources.jar</exclude>
								<exclude>*workdesk.war</exclude>
								<exclude>oecmlocalize*.jar</exclude>
								<exclude>oecmcustomlocalize*.jar</exclude>
							</excludes>
							<keystore>${keystore}</keystore>
							<alias>${alias}</alias>
							<keypass>${keypass}</keypass>
							<tsaurl>${tsaurl}</tsaurl>
							<storepass>${storepass}</storepass>
							<sigfile>${sigfile}</sigfile>
							<verify>true</verify>
							<verbose>false</verbose>
							<removeExistingSignatures>true</removeExistingSignatures>
							<processAttachedArtifacts>false</processAttachedArtifacts>
							<processMainArtifact>false</processMainArtifact>
						</configuration>
					</plugin>

				</plugins>
			</build>
		</profile>
