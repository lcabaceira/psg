		<profile>
			<id>doSeleniumTests</id>
			<properties>
				<webXmlPath>src/main/resources/testResources/web.xml</webXmlPath>
			</properties>
			<dependencies>
				<dependency>
					<groupId>com.wewebu.ecm</groupId>
					<artifactId>ow_adpfncm5</artifactId>
					<version>4.2.0</version>
					<scope>provided</scope>
					<exclusions>
						<exclusion>
							<groupId>com.filenet</groupId>
							<artifactId>pe3pt</artifactId>
						</exclusion>
						<exclusion>
							<groupId>com.filenet</groupId>
							<artifactId>pe</artifactId>
						</exclusion>
					</exclusions>
				</dependency>
				<dependency>
					<groupId>com.wewebu.ecm</groupId>
					<artifactId>ow_adpcmis</artifactId>
					<version>4.2.0.0_Sprint6-SNAPSHOT</version>
				</dependency>
			</dependencies>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.cargo</groupId>
						<artifactId>cargo-maven2-plugin</artifactId>
						<version>1.0.6</version>
						<configuration>
							<wait>false</wait>
							<logOutput>true</logOutput>
							<!-- Container configuration -->
							<container>
								<type>installed</type>
								<containerId>tomcat6x</containerId>
								<home>${tomcat.selenium}</home>
							</container>
							<configuration>
								<properties>
									<cargo.servlet.port>8888</cargo.servlet.port>
									<cargo.tomcat.ajp.port>8099</cargo.tomcat.ajp.port>
								</properties>
							</configuration>
							<deployer>
								<type>installed</type>
								<deployables>
									<deployable>
										<groupId>${project.groupId}</groupId>
										<artifactId>workdesk</artifactId>
										<type>war</type>
										<pingURL>http://localhost:8888/${deployName}</pingURL>
										<pingTimeout>300000</pingTimeout>
										<properties>
											<context>${deployName}</context>
										</properties>
									</deployable>
								</deployables>
							</deployer>
						</configuration>
						<executions>
							<execution>
								<id>start-container</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>start</goal>
									<goal>deployer-deploy</goal>
								</goals>
							</execution>
							<execution>
								<id>stop-container</id>
								<phase>post-integration-test</phase>
								<goals>
									<goal>deployer-undeploy</goal>
									<goal>stop</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<!-- selenium server -->
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>selenium-maven-plugin</artifactId>
						<version>2.1</version>
						<configuration>
							<browser>*iexplore</browser>
							<suite>target/testSuites/testsuite.html</suite>
							<results>target/testSuitesResult/testsuiteresult.html</results>
							<startURL>http://localhost:8888/</startURL>
							<port>${selenium.port}</port>
							<background>true</background>
							<logOutput>true</logOutput>
							<multiWindow>true</multiWindow>
						</configuration>
						<executions>
							<!-- start server -->
							<execution>
								<id>start</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>start-server</goal>
								</goals>
							</execution>
							<!-- used to run a recorded testsuite <execution> <id>Run-Selenese-Scripts</id> <phase>integration-test</phase> <goals> <goal>selenese</goal> </goals> </execution> -->
							<!-- stop selenium server -->
							<execution>
								<id>stop</id>
								<phase>post-integration-test</phase>
								<goals>
									<goal>stop-server</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-eclipse-plugin</artifactId>
						<version>2.8</version>
						<configuration>
						</configuration>
					</plugin>
				</plugins>
				<finalName>workdesk</finalName>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<filtering>true</filtering>
						<includes>
							<include>**/workdesk-version.properties</include>
							<include>**/rendition.xml</include>
						</includes>
					</resource>
				</resources>
			</build>
