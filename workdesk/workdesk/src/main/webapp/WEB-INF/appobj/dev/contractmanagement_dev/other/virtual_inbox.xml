<?xml version="1.0" ?>
<VirtualFolderDescription>

	<!-- (optional) java class name of virtual folder factory to use. Leave 
		empty to use standard: com.wewebu.ow.server.ecm.OwStandardVirtualFolderObjectFactory -->
	<ClassName />

	<root name="Inbox" containsdocs="true">
		<search versionselection="currentversion">
			<!-- currentversion,allversions,releasedversion,checkedoutversion,inprocessversion,majorversions,minorversions -->
			<select>
				<selectprops>
					<selectprop symname="cmis:document.cmis:name" />
					<selectprop symname="cmis:document.cmis:creationDate" />
					<selectprop symname="cmis:document.cmis:createdBy" />
					<selectprop symname="cmis:document.cmis:objectTypeId" />
				</selectprops>
			</select>
			<from>
				<class symname="document" />
			</from>
			<folders>
				<folder pathname="/Sites/contractmanagement/documentLibrary/Inbox"
					searchsubfolders="false" view="hidden">
					<objectstore name="Main Repository" />
				</folder>
			</folders>

			<subclasses>
				<subclass editproperty="hidden" name="Document" objecttype="document"
					symname="D:cmg:document" />
			</subclasses>
		</search>
		<node name="Find all Documents" containsdocs="true">
			<search versionselection="currentversion">
				<select>
					<selectprops>
						<selectprop symname="cmis:document.cmis:name" />
						<selectprop symname="cmis:document.cmis:creationDate" />
						<selectprop symname="cmis:document.cmis:createdBy" />
						<selectprop symname="cmis:document.cmis:objectTypeId" />
					</selectprops>
				</select>
				<from>
					<class symname="document" />
				</from>
				<folders>
					<folder pathname="/Sites/contractmanagement/documentLibrary/Inbox"
						searchsubfolders="false" view="hidden">
						<objectstore name="Main Repository" />
					</folder>
				</folders>
				<where>
					<and>
						<cbr_in>
							<whereprop editproperty="editable" symname="cmis:document.cmis:name" />
						</cbr_in>
						<eq>
							<whereprop editproperty="editable"
								symname="cmis:document.cmis:creationDate" datemode="ignoretime" />
							<literal />
						</eq>
						<gte>
							<whereprop editproperty="editable"
								symname="cmis:document.cmis:creationDate" datemode="ignoretime" />
							<literal />
						</gte>
						<lte>
							<whereprop editproperty="editable"
								symname="cmis:document.cmis:creationDate" datemode="ignoretime" />
							<literal />
						</lte>
					</and>
				</where>
				<subclasses>
					<subclass editproperty="hidden" name="Document"
						objecttype="document" symname="D:cmg:document" />
				</subclasses>
			</search>
			<node name="Today" containsdocs="true">
				<refinecriteria>
					<literal symname="cmis:document.cmis:creationDate"
						datemode="ignoretime">{today}</literal>
				</refinecriteria>
			</node>
		</node>
	</root>
</VirtualFolderDescription>